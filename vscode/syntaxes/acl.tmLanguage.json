{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ACL",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#identifiers"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.acl",
					"match": "\\b(if|while|for|return|else|func|let)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.acl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.acl",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.acl",
					"match": "^\\s*#.*$"
				}
			],
			"match": "#.*$",
			"name": "comment.line.double-slash.acl"
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.acl",
					"match": "\\b(0x[0-9a-fA-F]+|[0-9]+(\\.[0-9]+)?)\\b"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.acl",
					"match": "\\+|-|&&|\\|\\||\\*|\\/|%|!|<|>|<=|>=|==|!=|=|\\+=|\\-=|\\*=|\\/=|%=|&=|\\|=|\\^=|<<=|>>=|>>>=|&&=|\\|\\|=|\\?\\:"
				}
			]
		},
		"identifiers": {
			"patterns": [
				{
					"name": "variable.other.identifier.acl",
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
				}
			]
		}
	},
	"scopeName": "source.acl"
}